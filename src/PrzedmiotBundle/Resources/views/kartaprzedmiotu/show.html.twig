{% extends 'base.html.twig' %}

{% block body %}
    <h1>Karta przedmiotu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Wersja</th>
                <td>{{ kartaPrzedmiotu.wersja }}</td>
            </tr>
            <tr>
                <th>Studium</th>
                <td>{{ kartaPrzedmiotu.studium }}</td>
            </tr>
            <tr>
                <th>Opiekun przedmiotu</th>
                <td>{{ kartaPrzedmiotu.opiekunPrzedmiotu }}</td>
