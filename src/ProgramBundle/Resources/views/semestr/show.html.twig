{% extends 'base.html.twig' %}

{% block body %}
    <h1>Semestr</h1>

    <table class="table table-hover">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ semestr.id }}</td>
        </tr>
        <tr>
            <th>Numer</th>
            <td>{{ semestr.numer }}</td>
        </tr>
        </tbody>
    </table>

    <h2>Moduły</h2>
    <a class="btn btn-info" href="{{ path('modulksztalcenia_new', {'id': semestr.id}) }}">Dodaj moduł kształcenia</a>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>Id</th>
        </tr>
        </thead>
        <tbody>
        {% for modulKsztalcenia in semestr.modulKsztalcenia %}
            <tr>
                <td>{{ modulKsztalcenia.id }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('semestr_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('semestr_edit', { 'id': semestr.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
